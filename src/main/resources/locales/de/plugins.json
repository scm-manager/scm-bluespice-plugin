{
  "scm-bluespice-plugin": {
    "navLink": "BlueSpice",
    "config": {
      "title": "BlueSpice-Konfiguration",
      "globalDescription": "Diese Konfiguration ermöglicht das Festlegen der Basis-URL einer BlueSpice-Instanz. In den Repository-Einstellungen kann anschließend der Pfad erweitert werden.",
      "button": "Link testen",
      "configure": "BlueSpice-Anbindung konfigurieren",
      "baseUrl": {
        "header": "Ergänzen Sie die Basis-URL:",
        "description": "um einen individuellen Pfad oder setzen Sie alternativ eine individuelle URL."
      },
      "overridePath": {
        "header": "Konfigurieren Sie die URL, um auf Ihren BlueSpice-Server zuzugreifen",
        "label": "BlueSpice-URL",
        "option": "Individuelle BlueSpice-URL setzen"
      },
      "appendPath": {
        "label": "Pfad",
        "option": "Basis-URL um Pfad erweitern"
      }
    }
  },
  "permissions": {
    "configuration": {
      "read,write": {
        "blueSpice": {
          "displayName": "Globale BlueSpice-Konfiguration ändern",
          "description": "Darf die globale BlueSpice-Konfiguration verändern"
        }
      }
    },
    "repository": {
      "configureBlueSpice": {
        "*": {
          "displayName": "Repository-spezifische BlueSpice-Konfiguration ändern",
          "description": "Darf die repository-spezifischen BlueSpice-Konfiguration verändern"
        }
      }
    }
  },
  "verbs": {
    "repository": {
      "configureBlueSpice": {
        "displayName": "BlueSpice-Konfiguration ändern",
        "description": "Darf die BlueSpice-Konfiguration verändern"
      }
    }
  }
}
